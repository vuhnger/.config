live_config_reload = true

import = [
    "~/.config/alacritty/themes/themes/rose-pine-dawn.toml"
]

[env]
TERM = "xterm-256color"

[window]
decorations = "buttonless"
dynamic_padding = false

  [window.padding]
  x = 25
  y = 20

  [window.dimensions]
  columns = 133
  lines = 40

[bell]
animation = "Linear"
duration = 500
color = "#b59b9c"

[font]
size = 15

  [font.offset]
  x = 1
  y = 1

  [font.bold]
  family = "SFMono Nerd Font"
  style = "Heavy"

  [font.bold_italic]
  family = "SFMono Nerd Font"
  style = "Heavy Italic"

  [font.italic]
  family = "SFMono Nerd Font"
  style = "Medium Italic"

  [font.normal]
  family = "SFMono Nerd Font"
  style = "Medium"

[[keyboard.bindings]]
key = "Right"
mods = "Alt"
chars = "\u001bF"

[[keyboard.bindings]]
key = "Left"
mods = "Alt"
chars = "\u001bB"
